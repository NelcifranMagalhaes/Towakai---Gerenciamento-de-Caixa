<p id="notice"><%= notice %></p>
<div class="columns">
  <div class="column">
    <div class="card">
      <header class="card-header">
        <p class="card-header-title">
          Nome
        </p>
      </header>
      <div class="card-content">
        <div class="content">
        <%= @product_type.name %>
        </div>
      </div>
    </div>
  </div>
  <div class="column">
    <div class="card">
      <header class="card-header">
        <p class="card-header-title">
          Tamanho
        </p>
      </header>
      <div class="card-content">
        <div class="content">
          <%= @product_type.size %>
        </div>
      </div>
    </div>
  </div>
  <div class="column">
    <div class="card">
      <header class="card-header">
        <p class="card-header-title">
          Cor
        </p>
      </header>
      <div class="card-content">
        <div class="content">
          <%= @product_type.color %>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="columns">
	<div class="field is-grouped is-grouped-right column is-4 is-offset-8">
	  <p class="control">
		<%= link_to 'Editar',edit_product_type_path(@product_type),class: "button is-primary" %>
	  </p>
	  <p class="control">
		<%= link_to 'Voltar', product_types_path ,class: "button is-info is-inverted"%>
	  </p>
	</div>
</div>