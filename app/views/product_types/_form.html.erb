
<%= simple_form_for(@product_type) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
  <div class="box">
      <div class="field">
          <label class="label">Nome</label>
          <div class="control">
              <%= f.input :name,label: false ,input_html: {class: 'input'}%>
          </div>
      </div>
      <div class="field">
          <label class="label">Cor</label>
          <div class="control">
              <%= f.input :color, label: false ,input_html: {class: 'input'}%>
          </div>
      </div>
      <div class="field">
          <label class="label">Tamanho</label>
          <div class="control">
              <%= f.input :size, label: false ,input_html: {class: 'input'}%>
          </div>
      </div>
      <div class= "control">
          <%= f.button :submit ,class: "button is-primary"%>
      </div>
  </div>
<% end %>
