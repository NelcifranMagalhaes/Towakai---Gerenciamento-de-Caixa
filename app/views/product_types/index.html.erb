<p id="notice"><%= notice %></p>

<article class="message is-dark">
  <div class="message-header">
    <p>Tipo de Produto</p>
  </div>
</article>

<div class="box">
    <%= search_form_for @q, url: product_types_path, html: {method: :get} do |f| %>
            <div class="field is-horizontal">
                  <div class="field is-grouped">          
                      <p class="control is-expanded">
                      <%= f.input :name_cont,class: 'input',label: false,placeholder: "Nome" %>
                      </p>
                  </div>
                  <div class="field is-grouped">          
                      <p class="control is-expanded">
                      <%= f.input :size_cont,class: 'input',label: false,placeholder: "Tamanho" %>
                      </p>
                  </div>     
              &nbsp;
              <div class="field-body">
                <div class="field is-grouped">          
                  <%= f.submit "Pesquisar", class: 'button is-primary' %>
                </div>
              </div>
            </div>
    <% end %>
  </div>

   <div class="table-container">  
    <table class="table is-striped is-flex-tablet-only is-fullwidth">
      <thead>
        <tr>
          <th>Nome</th>
          <th>Cor</th>
          <th>Tamanho</th>
          <th colspan="3">#</th>
        </tr>
      </thead>

      <tbody>
        <% @product_types.each do |product_type|%>
          <tr>
            <td><%= product_type.name %></td> 
            <td><%= product_type.color %></td>
            <td><%= product_type.size %></td>
            <td>
              <%= render 'shared/action_links', object: product_type %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <div class="box">
    <div class="columns is-gapless is-multiline is-mobile">
      <%= paginate @product_types %>
    </div>
 </div>
<%= link_to 'Novo Tipo de Produto',new_product_type_path,class: "button is-link" %>
</div>
