<article class="message is-dark">
  <div class="message-header">
    <p>Produtos</p>
  </div>
</article>
<%= content_tag :div, class: "temp_information", data: {temp: @all_products} do %>
<div class="box">
  <div id="container" style="min-width: 300px; height: 400px; margin: 0 auto"></div>
</div>
<% end %>
<br></br>
<div class="box">
  Quantidade de Produtos em estoque: 
  <span class="tag is-link">
    <%= @quantity_of_products %>
  </span>
</div>
<div class="box">
<%= search_form_for @q, url: products_path, html: {method: :get} do |f| %>
<div class="field-body">
    <div class="field">
        <label class="label">Nome</label>
        <div class="control">
            <%= f.search_field :name_cont,class: 'input',label: false %>
        </div>
    </div>
    <div class="field">
        <label class="label">Quantidade</label>
        <div class="control">
            <%= f.search_field :quantity_eq,class: 'input',label: false %>
        </div>
    </div>
  </div>
  <div class= "field">
      <div class="control">
      </div>
  </div>
  <div class="field-body">
     <div class="field">
       <div class="control">
        <%= f.submit "Pesquisar", class: 'button is-primary' %>
       </div>
     </div>
   </div>
<% end %>
<br>
 <div class="table-container">  
  <table class="table is-striped is-flex-tablet-only is-fullwidth">
    <thead>
      <tr>
        <th>Nome</th>
        <th>Tipo</th>
        <th>Preço de venda</th>
        <th>Quantidade</th>
        <th colspan="3">Ações</th>
      </tr>
    </thead>

    <tbody>
      <% @products.each do |product| %>
        <tr>
          <td><%= product.name %></td>
          <td><%= product.product_type.name_code_of_product%></td>
          <td><%= product.sale_price %></td>
          <td><%= product.quantity %></td>
          <td>
            <%= render 'shared/action_links', object: product %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

 <div class="box">
   <div class="columns is-gapless is-multiline is-mobile">
     <%= paginate @products %>
   </div>
</div>
<%= link_to 'Novo Produto', new_product_path,class: "button is-link" %>
</div>
