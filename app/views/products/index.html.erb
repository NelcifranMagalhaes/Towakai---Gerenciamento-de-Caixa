<p id="notice"><%= notice %></p>
<article class="message is-dark">
  <div class="message-header">
    <p>Produtos</p>
  </div>
</article>

<div class="box">
<%= search_form_for @q, url: products_path, html: {method: :get} do |f| %>
<div class="field-body">
    <div class="field">
        <label class="label">Nome</label>
        <div class="control">
            <%= f.search_field :name_cont,class: 'input',label: false %>
        </div>
    </div>
    <div class="field">
        <label class="label">Quantidade</label>
        <div class="control">
            <%= f.search_field :quantity_eq,class: 'input',label: false %>
        </div>
    </div>
  </div>
  <div class= "field">
      <div class="control">
      </div>
  </div>
  <div class="field-body">
     <div class="field">
       <div class="control">
        <%= f.submit "Pesquisar", class: 'button is-primary' %>
       </div>
     </div>
   </div>
<% end %>
<br>
 <div class="table-container">  
  <table class="table is-striped is-flex-tablet-only">
    <thead>
      <tr>
        <th>Nome</th>
        <th>Preço de custo</th>
        <th>Taxas</th>
        <th>Preço de venda</th>
        <th>Quantidade</th>
        <th align="justify" colspan="3">Ações</th>
      </tr>
    </thead>

    <tbody>
      <% @products.each do |product| %>
        <tr>
          <td><%= product.name %></td>
          <td><%= product.cost_price %></td>
          <td><%= product.tax %></td>
          <td><%= product.sale_price %></td>
          <td><%= product.quantity %></td>
          <td><%= link_to 'Ver', product ,class: "button is-small is-primary"%></td>
          <td><%= link_to 'Editar', edit_product_path(product) ,class: "button is-small is-info"%></td>
          <td><%= link_to 'Deletar', product,class: "button is-small is-danger ", method: :delete, data: { confirm: 'Você tem certeza?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

 <div class="box">
   <div class="columns is-gapless is-multiline is-mobile">
     <%= paginate @products %>
   </div>
</div>
<%= link_to 'Novo Produto', new_product_path,class: "button is-link" %>
</div>
