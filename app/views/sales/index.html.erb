<p id="notice"><%= notice %></p>
<article class="message is-dark">
  <div class="message-header">
    <p>Vendas</p>
  </div>
</article>  
<table class="table is-fullwidth is-striped">
  <thead>
    <tr>
      <th>Data da Venda</th>
      <th>Produtos</th>
      <th colspan="3">#</th>
    </tr>
  </thead>

  <tbody>
    <% @sales.each do |sale| %>
      <tr>
        <td><%=l sale.sale_date %></td>
        <td>
          <% sale.products.each do |p| %>
            <span class="tag is-info is-normal"><%= p.name %></span>
          <% end %>
        </td>
        <td><%= link_to 'Ver', sale ,class: "button is-small is-primary"%></td>
        <td><%= link_to 'Editar', edit_sale_path(sale) ,class: "button is-small is-info"%></td>
        <td><%= link_to 'Deletar', sale,class: "button is-small is-danger ", method: :delete, data: { confirm: 'VocÃª tem certeza?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<%= link_to 'Nova Venda', new_sale_path,class: "button is-link" %>
