<div class="nested-fields">
	<div class="tile is-parent">
		<div class="tile is-child box">
			<div class="field is-horizontal">
				<div class="field-body">
					<div class="field">
						<label class="label">Produto</label>
						<div class="control">
							<%= f.association :product, as: :select,collection: Product.order(name: :asc) ,prompt: "Escolha o Produto",label_method: :name_and_size,
							 value_method: :id,input_html: {class: 'select selectSearch'}%>
						</div>
					</div>

					<div class="field">
						<label class="label">Quantidade</label>
						<div class="control">
							<%= f.input :quant,label: false ,input_html: {class: 'input'}%>
						</div>
					</div>
					<div class="field">
						<label class="label">Pre√ßo Vendido</label>
						<div class="control">
							<%= f.input :price_saled,label: false ,input_html: {class: 'input money'}%>
						</div>
					</div>
				</div>
			</div>
			<br>
			<div class="field is-grouped is-grouped-right">
			  <p class="control">
				<%= link_to_remove_association "remover Produto", f ,class: "button is-danger"%>   
			  </p>
			</div>
			<br>
		</div>
	</div>
</div>

<script type="text/javascript">
	$( ".selectSearch" ).select2();
</script>