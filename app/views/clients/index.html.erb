<p id="notice"><%= notice %></p>
<article class="message is-dark">
  <div class="message-header">
    <p>Clientes</p>
  </div>
</article>

<div class="box">
<%= search_form_for @q, url: clients_path, html: {method: :get} do |f| %>
    <div class="field">
        <label class="label">Nome</label>
        <div class="control">
            <%= f.search_field :name_eq,class: 'input',label: false %>
        </div>
    </div>
    <div class= "control">
        <%= f.submit "Pesquisar", class: 'button is-primary' %>
    </div>
<% end %>

 <div class="table-container">  
  <table class="table is-striped is-flex-tablet-only">
    <thead>
      <tr>
        <th>Nome</th>
        <th>Endereço</th>
        <th colspan="3">#</th>
      </tr>
    </thead>

    <tbody>
      <% @clients.each do |client| %>
        <tr>
          <td width="5%"><%= client.name %></td>
          <td width="5%"><%= client.address %></td>
          <td width="5%"><%= link_to 'Ver', client, class: "button is-small is-primary"%></td>
          <td width="5%"><%= link_to 'Editar', edit_client_path(client),class: "button is-small is-info" %></td>
          <td width="5%"><%= link_to 'Deletar', client,class: "button is-small is-danger ", method: :delete, data: { confirm: 'Você tem certeza?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

  <div class="box">
    <div class="columns is-gapless is-multiline is-mobile">
      <%= paginate @clients %>
    </div>
 </div>
<%= link_to 'Novo Cliente', new_client_path,class: "button is-link" %>
</div>
