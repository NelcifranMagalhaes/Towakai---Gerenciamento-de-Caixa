<article class="message is-dark">
  <div class="message-header">
    <p>Clientes</p>
  </div>
</article>

<div class="box">
    <%= search_form_for @q, url: clients_path, html: {method: :get} do |f| %>
            <div class="field is-horizontal">
                <div class="field-body">
                  <div class="field is-grouped">          
                      <div class="field-label is-normal">
                        <label class="label">Nome</label>             
                    </div>          
                      <p class="control is-expanded">
                      <%= f.search_field :name_cont,class: 'input',label: false %>
                      </p>
                  </div>     
              </div>
              &nbsp;
                <div class="field-body">
                  <div class="field is-grouped">          
                      <div class="field-label is-normal">
                        <label class="label">Email</label>             
                    </div>          
                      <p class="control is-expanded">
                      <%= f.search_field :email_cont,class: 'input',label: false %>
                      </p>
                  </div>     
              </div>
              &nbsp;
              <div class="field-body">
                <div class="field is-grouped">          
                  <%= f.submit "Pesquisar", class: 'button is-primary' %>
                </div>
              </div>
            </div>
    <% end %>
  </div>

   <div class="table-container">  
    <table class="table is-striped is-flex-tablet-only is-fullwidth">
      <thead>
        <tr>
          <th>Nome</th>
          <th>Email</th>
          <th colspan="3">#</th>
        </tr>
      </thead>

      <tbody>
        <% @clients.each do |client| %>
          <tr>
            <td><%= client.name %></td>
            <td><%= client.email %></td>
            <td>
              <%= render 'shared/action_links', object: client %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <div class="box">
    <div class="columns is-gapless is-multiline is-mobile">
      <%= paginate @clients %>
    </div>
 </div>
<%= link_to 'Novo Cliente', new_client_path,class: "button is-link" %>
</div>

