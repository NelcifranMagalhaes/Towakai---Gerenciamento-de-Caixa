
<div id="container"></div>

<%= content_tag :div, class: "temp_information", data: {temp: @sales} do %>
<% end %>

<h4 class="title is-4">
	<span class="tag is-primary is-medium">Número de vendas por dia sem ENCOMENDAS</span>
</h4>

<div class="box">
	<%= line_chart @sales %>
</div>

<h4 class="title is-4">
	<span class="tag is-primary is-medium">Produto mais Vendido no Mês</span>
</h4>

<div class="box">
	<span class="tag is-black"><%= @most_frequent_item.name if @most_frequent_item.present?%></span>
</div>

<h4 class="title is-4">
	<span class="tag is-primary is-medium">Valor total das vendas enviadas/cadastradas/recebidas no Mês</span>
</h4>

<div class="box">
	<span class="tag is-black">R$<%= @value_total_all_sales%></span>
</div>
