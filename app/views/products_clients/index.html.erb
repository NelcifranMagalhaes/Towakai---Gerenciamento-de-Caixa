        <td><%= link_to 'Ver', pc ,class: "button is-small is-primary"%></td>
        <td><%= link_to 'Editar', edit_product_client_path(pc) ,class: "button is-small is-info"%></td>
        <td><%= link_to 'Deletar', pc,class: "button is-small is-danger ", method: :delete, data: { confirm: 'VocÃª tem certeza?' } %></td>
      </tr>
