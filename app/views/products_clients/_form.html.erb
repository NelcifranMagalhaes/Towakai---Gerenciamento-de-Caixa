
<%= simple_form_for(@product_client) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="box">
    <div class="field">
        <label class="label">Data da Venda</label>
        <div class="control">
            <%= f.input :date_sale,html5: true,label: false ,input_html: {class: 'input'}%>
        </div>
    </div>
    <div class="field">
        <label class="label">Cliente</label>
        <div class="control">
            <%= f.association :client,label: false ,input_html: {class: 'input'}%>
        </div>
    </div>
    <div class="field">
        <label class="label">Produto</label>
        <div class="control">
            <%= f.association :products,label: false ,input_html: {class: 'input'}%>
        </div>
    </div>
    <div class= "control">
        <%= f.button :submit ,class: "button is-primary"%>
    </div>
  </div>
<% end %>

