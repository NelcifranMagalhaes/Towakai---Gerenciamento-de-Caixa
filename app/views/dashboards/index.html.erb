<section class="hero is-info welcome is-small">
    <div class="hero-body">
        <div class="container">
            <h1 class="title">
                Oi, <%= current_user.email  %>.
            </h1>
            <h2 class="subtitle">
                Towakai - Conforto,Beleza e Tradição.
            </h2>
        </div>
    </div>
</section>
<section class="info-tiles">
    <div class="tile is-ancestor has-text-centered">
        <div class="tile is-parent">
            <article class="tile is-child box">
                <%= fa_icon "user"%>
                <p class="title"><%= Client.count  %></p>
                <p class="subtitle">Clientes</p>
            </article>
        </div>
        <div class="tile is-parent">
            <article class="tile is-child box">
                <%= fa_icon "product-hunt"%>
                <p class="title"><%= Product.count  %></p>
                <p class="subtitle">Produtos</p>
            </article>
        </div>
        <div class="tile is-parent">
            <article class="tile is-child box">
                <%= fa_icon "cart-plus"%>
                <p class="title"><%= Sale.count  %></p>
                <p class="subtitle">Vendas</p>
            </article>
        </div>
    </div>
</section>

<div class="columns">
    <div class="column is-6">
        <div class="card events-card">
            <header class="card-header">
                <p class="card-header-title">
                    Clientes
                </p>
                <a href="#" class="card-header-icon" aria-label="more options">
                  <span class="icon">
                    <i class="fa fa-angle-down" aria-hidden="true"></i>
                  </span>
                </a>
            </header>
            <div class="card-table">
                <div class="content">
                    <table class="table is-fullwidth is-striped">
                        <tbody>
                            <% @clients.each do |client| %>
                                <tr>
                                    <td width="5%"><%= fa_icon "user"%></td>
                                    <td><%= client.name %></td>
                                    <td width="5%"><%= link_to 'Ver', client, class: "button is-small is-primary"%></td>
                                </tr>
                            <% end %>
                        </tbody>
                    </table>
                </div>
            </div>
            <footer class="card-footer">
                <%= link_to 'Ver todos', clients_path ,class: "card-footer-item"%>
            </footer>
        </div>
    </div>
    <div class="column is-6">
        <div class="card events-card">
            <header class="card-header">
                <p class="card-header-title">
                    Produtos
                </p>
                <a href="#" class="card-header-icon" aria-label="more options">
                  <span class="icon">
                    <i class="fa fa-angle-down" aria-hidden="true"></i>
                  </span>
                </a>
            </header>
            <div class="card-table">
                <div class="content">
                    <table class="table is-fullwidth is-striped">
                        <tbody>
                            <% @products.each do |product| %>
                                <tr>
                                    <td width="5%"><%= fa_icon "product-hunt"%></td>
                                    <td><%= product.name %></td>
                                    <td width="5%"><%= link_to 'Ver', product, class: "button is-small is-primary"%></td>
                                </tr>
                            <% end %>
                        </tbody>
                    </table>
                </div>
            </div>
            <footer class="card-footer">
                <%= link_to 'Ver todos', products_path ,class: "card-footer-item"%>
            </footer>
        </div>
    </div>
</div>
<div class="columns">
    <div class="column is-12">
        <div class="card events-card">
            <header class="card-header">
                <p class="card-header-title">
                    Vendas
                </p>
                <a href="#" class="card-header-icon" aria-label="more options">
                  <span class="icon">
                    <i class="fa fa-angle-down" aria-hidden="true"></i>
                  </span>
                </a>
            </header>
            <div class="card-table">
                <div class="content">
                    <table class="table is-fullwidth is-striped">
                        <tbody>
                            <% @sales.each do |sale| %>
                                <tr>
                                    <td width="5%"><%= fa_icon "cart-plus"%></td>
                                    <td><%=l sale.sale_date %></td>
                                    <td><%=sale.client.name %></td>
                                    <td>
                                      <span class="text-muted">
                                        <span class="tag is-<%= %w(dark warning danger success)[sale&.status_sale&.reference] %>">
                                          <%= sale&.status_sale&.name_upper if sale.status_sale.present? %>
                                        </span>
                                      </span>            
                                    </td>
                                    <td width="5%"><%= link_to 'Ver', sale, class: "button is-small is-primary"%></td>
                                </tr>
                            <% end %>
                        </tbody>
                    </table>
                </div>
            </div>
            <footer class="card-footer">
                <%= link_to 'Ver todos', sales_path ,class: "card-footer-item"%>
            </footer>
        </div>
    </div>
</div>